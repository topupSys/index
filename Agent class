package project1;

import java.util.Scanner;

public class Agent extends Users{
    protected String name;
    protected String unique_id;
    
    public Agent (){
    	
    }

    Agent(String name, String unique_id){
   	 this.name = name;
   	 this.unique_id = unique_id; 
    }
    public Agent(int phone_no,double balance, String telco, double amount, String name, String unique_id ){
		this.name = name;
		this.unique_id = unique_id;
		setPhoneNo(phone_no);
		setBalance(balance);
		setTelco(telco);
		setAmount(amount);
	}
    
    public String getName(){
   	 return name;
    }
    
    public void setName(String name){
   	 this.name = name;
    }
    public double getAmount(){
    	Scanner input = new Scanner(System.in);
    	amount = 0;
    	amount = input.nextDouble();
    	amount++;
    	return amount;
    }
    
    public String getUnique_id(){
    	Scanner input = new Scanner(System.in);
    	unique_id = input.next();
   	 return unique_id;
    }
    
    public void setUnique_id(String id){
   	 this.unique_id = id;
    }
    
    public String getReport(){
   	 return name + unique_id;
    }
}
