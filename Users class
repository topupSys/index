package project1;
import java.util.Scanner;
public class Users {
    private String name; // name of user
    private String password; // the password of user account
    protected int phone_no;
	protected int option; // choose top-up carrier
	protected double balance; // balance remaining in the phone
	protected String telco; // carrier choose
	protected double amount; // amount to be top-up
	protected int data; // mobile data obtain
	private java.util.Date dateCreated;
	
public Users(){
	
}

public Users(String name, String password, int phone_no,  double balance, String telco, double amount, int option){
	this.name = name;
	this.password = password;
	this.phone_no = phone_no;
	this.option = option;
	this.balance = balance;
	this.telco = telco;
	this.amount = amount;
	dateCreated = new java.util.Date();
}

public String getName(){
	Scanner input = new Scanner(System.in);
	name = input.next();
	return name;
}

public void setName(String name){
	this.name = name;
}

public String getPassword(){
	Scanner input = new Scanner(System.in);
	password = input.next();
	return password;
}

public void setPassword(String password){
	this.password = password;
}

public int getPhoneNo(){
	Scanner input = new Scanner(System.in);
	phone_no = input.nextInt();
	return phone_no;
}

public void setPhoneNo(int phone_no){
	this.phone_no = phone_no;
}
public int getOption(){
	return option;
}

public void setOption(int option){
	this.option = option;
}

public double getBalance(){
	return balance;
}

public void setBalance(double balance){
	this.balance = balance;
}

public String getTelco(){
	Scanner input = new Scanner (System.in);
	telco = input.next();
	return telco;
}

public void setTelco(String telco){
	this.telco = telco;
}

public double getAmount(){
	Scanner input = new Scanner(System.in);
	amount = input.nextDouble();
	return amount;
}

public void setAmount(double amount){
	this.amount = amount;
}

public String getAccount(){
	return name + password;
}

public boolean Login(){
	if(name == getName() && password == getPassword()){
		return true;
	}else{
		return false;
	}
}

public String getPayment(){
	Scanner input = new Scanner (System.in);
	System.out.println("Enter name: ");
	name = input .next();
	System.out.println("Enter your card_no: ");
	long card_no = input.nextLong();
	System.out.println("Enter expired date of the card: ");
	String exp_card_date = input.next();
	System.out.println("Enter bank name:");
	String bank_name = input.next();
	return "Enter your full name: " +name+ "\nEnter your card no.: " +card_no+ "\nEnter expired date of the card: "+exp_card_date+ "\nEnter bank name: "+bank_name;
}

public double getData(){
	return data;
}

public java.util.Date getDateCreated(){
	return dateCreated;
}
public String toString(){
	return +phone_no+ "Balance: " +getBalance();
}
}
